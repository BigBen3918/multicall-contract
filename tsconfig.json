{
    "compilerOptions": {
        "lib": ["es5", "es6", "es2017", "es2020"],
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "/",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": false,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "types": ["node", "jest"]
    },
    "ts-node": {
        "files": true
    },
    "include": ["/**/*"]
}
